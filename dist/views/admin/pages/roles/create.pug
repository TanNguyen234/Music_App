extends ../../layouts/default.pug

block main 
  .container-fluid
    h1(class="mb-4 text-center") Thêm mới nhóm quyền 
    form(action=`/${prefixAdmin}/roles/create` method="POST" id="form-create")
      div(class="form-group")
        label(for="tite") Tiêu đề
        input(type="text" class="form-control" id="title" name="title" required)
      div(class="form-group mb-3")
        label(for="desc") Mô tả
        textarea(class="form-control" textarea-mce id="desc" name="description")
      div(class="form-group d-flex justify-content-center")
        button(type="submit" class="btn btn-primary") Tạo mới