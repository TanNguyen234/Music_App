extends ../../layouts/default.pug

block main 
  h1(class="mb-4 text-center") Chỉnh sửa nhóm quyền 
  .container-fluid
    form(action=`/${prefixAdmin}/roles/edit/${role._id}?_method=PATCH` method="POST" id="form-create")
      div(class="form-group")
        label(for="tite") Tiêu đề
        input(type="text" class="form-control" id="title" name="title" required value=role.title)
      div(class="form-group mb-3")
        label(for="desc") Mô tả
        input(type="text" class="form-control" id="desc" name="description" value=role.description)
      div(class="form-group")
        button(type="submit" class="btn btn-primary") Lưu thay đổi