extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/not-permission.pug

block main
 if(role.permissions.includes('roles_permissions'))
  +success-alert(5000) 
  +error-alert(5000)
  div(class="alert-user alert-user-success" data-time=5000)
  div(class="alert-user alert-user-error" data-time=5000)
  .container-fluid
   if(roles.length > 0)
    h1(class="mb-4") Phân quyền 
    div(data-roles=roles)
    div(class="text-right tox")
        button(
            type="submit"
            class="btn btn-primary mb-3"
            button-submit
        ) Cập nhật
    table(class="table table-hover" table-permissions path=`/${prefixAdmin}/roles/permissions`)
        thead
          tr
            th Tính năng
            each role in roles
              th(class="text-center") #{role.title}
        tbody
          tr(data-name="id" class="d-none") 
            each role in roles
              td(class="text-center")
                input(type="text" value=role.id)
          //-Chủ đề
          tr 
            td(colspan="4")
              b Chủ đề
          tr(data-name="topic_view")
            td Xem
            each role in roles
              td(class="text-center")
                input(type="checkbox") 
          tr(data-name="topic_create")
            td Thêm mới 
            each role in roles 
              td(class="text-center")
                input(type="checkbox") 
          tr(data-name="topic_edit")
            td Chỉnh sửa 
            each role in roles 
              td(class="text-center")
                input(type="checkbox") 
          tr(data-name="topic_delete")
            td Xóa 
            each role in roles 
              td(class="text-center")
                input(type="checkbox") 
          //-Bài hát
          tr 
            td(colspan="4")
              b Bài hát
          tr(data-name="song_view")
            td Xem
            each role in roles 
              td(class="text-center")
                input(type="checkbox") 
          tr(data-name="song_create")
            td Thêm mới 
            each role in roles 
              td(class="text-center")
                input(type="checkbox") 
          tr(data-name="song_edit")
            td Chỉnh sửa 
            each role in roles 
              td(class="text-center")
                input(type="checkbox") 
          tr(data-name="song_delete")
            td Xóa 
            each role in roles 
              td(class="text-center")
                input(type="checkbox")
          //-Nhóm quyền
          tr 
            td(colspan="4")
              b Nhóm quyền
          tr(data-name="roles_view")
            td Xem
            each role in roles 
              td(class="text-center")
                input(type="checkbox") 
          tr(data-name="roles_create")
            td Thêm mới 
            each role in roles 
              td(class="text-center") 
                input(type="checkbox") 
          tr(data-name="roles_edit")
            td Chỉnh sửa 
            each role in roles 
              td(class="text-center")
                input(type="checkbox") 
          tr(data-name="roles_delete")
            td Xóa 
            each role in roles 
              td(class="text-center")
                input(type="checkbox")  
          tr(data-name="roles_permissions")
            td Phân quyền 
            each role in roles 
              td(class="text-center")
                input(type="checkbox")
          tr 
            td(colspan="4")
              b Tài khoản admin
          tr(data-name="admin_view")
            td Xem
            each role in roles
              td(class="text-center")
                input(type="checkbox") 
          tr(data-name="admin_create")
            td Thêm mới 
            each role in roles 
              td(class="text-center")
                input(type="checkbox") 
          tr(data-name="admin_edit")
            td Chỉnh sửa 
            each role in roles 
              td(class="text-center")
                input(type="checkbox") 
          tr(data-name="admin_delete")
            td Xóa 
            each role in roles 
              td(class="text-center")
                input(type="checkbox") 
          tr 
            td(colspan="4")
              b Tài khoản người dùng
          tr(data-name="user_view")
            td Xem
            each role in roles
              td(class="text-center")
                input(type="checkbox") 
          tr(data-name="user_delete")
            td Xóa 
            each role in roles 
              td(class="text-center")
                input(type="checkbox") 
   else
    .d-flex.justify-content-center.align-items-center.mt-10
        span(class="mr-10 text-center") Hiện tại chưa có nhóm quyền nào:    
        a(
            class="btn btn-outline-success"
            href=`/${prefixAdmin}/roles/create`
        ) + Thêm mới nhóm quyền
  
  form(
    class="d-none"
    id="form-change-permission"
    method="POST"
    action=`${prefixAdmin}/roles/permissions?method_PATCH`
  )
    div(class="form-group")
      input(type="text" class="form-control" name="permissions")
  script(src="/admin/js/roles.js")
 else 
  +not-permission()