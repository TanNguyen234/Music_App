header.header 
    .container-fluid
        .row
          .header__nav
              nav(aria-label="breadcrumb")
                ol.breadcrumb
                
          .header__content
             .admin 
               if(admin)
                a(href=`/${prefixAdmin}/auth/profile` class="btn btn-primary btn-sm mr-2")= admin.fullName
                a(href=`/${prefixAdmin}/auth/logout` class="btn btn-danger btn-sm" btn-logout) Đăng xuất
               else 
                a(href=`/${prefixAdmin}/auth/login` class="btn btn-primary") Đăng nhập