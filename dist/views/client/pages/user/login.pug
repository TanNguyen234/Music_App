extends ../../layouts/formUser.pug
include ../../mixins/alert.pug

block main 
    +error-alert(5000)
    
    .container-fluid.d-flex.justify-content-center.align-items-center
       .containerForm
         .ballon-top           
         form(action=`/user/login` method="POST" autocomplete="off" class="form")
          h1(class='text-center') Đăng nhập
          div
            label(for="email") Email
            input(type="text" id="email" name="email" required)
          div
            label(for="password") Mật khẩu
            input(type="text" id="password" name="password" minlength="8" maxlength="20" required)
            
          div
            button(type="submit") Đăng nhập
          .button-sub
            a(href='/user/register') Tạo tài khoản mới?
            a(href='/user/password/forgot') Quên mật khẩu?
         .ballon-bottom 