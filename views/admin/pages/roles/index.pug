extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/moment.pug
include ../../mixins/pagination.pug

block main 
  +success-alert(5000)
  +error-alert(5000)
  div(class="alert-user alert-user-success" data-time=5000)
  div(class="alert-user alert-user-error" data-time=5000)
  .container-fluid
   h1(class="mb-4") Nhóm quyền
   .card.mb-3 
    .card-header Danh sách 
    .card-body 
      .row 
        .col-9 
        .col-3.d-flex.justify-content-end.mb-3
          a(
            class="btn btn-outline-success"
            href=`/${prefixAdmin}/roles/create`
          ) + Thêm mới 
        
      table(class="table table-sm table-hover")
          thead
            tr
              th STT
              th Tiều đề
              //-th Nhóm quyền
              th Ngày tạo
              th Mô tả ngắn 
              th Hành động
          tbody
            if(roles.length > 0)
              each item, index in roles 
                tr.p-3 
                  td #{index + 1} 
                  td #{item.title} 
                  td 
                    +formatDay(item.createdAt)
                  td !{item.description} 
                  td 
                    a(
                      class="btn btn-secondary btn-sm"
                      href=`/${prefixAdmin}/roles/detail/${item.id}`
                    ) Chi tiết 
                    a(
                      class="btn btn-warning btn-sm ms-1"
                      href=`/${prefixAdmin}/roles/edit/${item.id}`
                    ) Sửa 
                    button(
                      btn-delete-role=item.id
                      class="btn btn-danger btn-sm ms-1"
                    ) Xóa
            else 
                tr 
                  td(colspan="4" class="text-center") Chưa có nhóm quyền nào được tạo  