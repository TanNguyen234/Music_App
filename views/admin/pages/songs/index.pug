extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/moment.pug
include ../../mixins/pagination.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/sort.pug

block main
    +success-alert(5000)
    .container-fluid
      .card.mb-3
       .card-header Bộ lộc và Tìm kiếm
       .card-body
        .row
         .col-6 
          +filterStatus(filterStatus)
         .col-6
          +search(keyword)

      .card.mb-3
       .card-header Sắp xếp 
       .card-body
        .row
        .col-4 
          +sort()

      .card.mb-3 
       .card-header Danh sách
       .card-body
        .row
         .col-12
            +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
            a(href=`/${prefixAdmin}/songs/create` class="btn btn-outline-success") + Thêm mới
         .col-12

            table.table.table-striped.table-bordered.table-hover(checkbox-multi)
                thead
                    tr
                        th
                            input(type="checkbox" name="checkall") 
                        th Stt
                        th Ảnh
                        th Tiêu đề
                        th Trạng thái
                        th Ngày tạo
                        th Ngày cập nhật mới nhất
                        th Hành động
                tbody
                 if(songs.length > 0)
                    each song, index in songs
                        tr  
                            td 
                                input(type="checkbox" name="ids" value=song.id) 
                            td= index + 1 + pagination.limitItem * (pagination.currentPage - 1)
                            td
                                if song.avatar
                                    img.img-fluid(src=`${song.avatar}`, alt=`${song.title}`)
                                else
                                    | No Image
                            td= song.title
                            td
                                if(song.status === "active")
                                    a(href="javascript:;" button-change-status data-status=song.status data-id=song.id type="button" class="btn btn-success") Hoạt động 
                                else
                                    a(href="javascript:;" button-change-status data-status=song.status data-id=song.id type="button" class="btn btn-danger") Dừng hoạt động 
                            td 
                                if(song.createdAt)
                                    +formatDay(song.createdAt)
                                else
                                    | No Data
                            td 
                                if(song.updatedAt)
                                    +formatDay(song.updatedAt)
                                else
                                    | No Data

                            td
                                a.btn.btn-primary.d-inline-block.mx-2(href=`/admin/songs/edit/${song._id}`) Chỉnh sửa
                                a.btn.btn-secondary.d-inline-block.mx-2(href=`/admin/songs/detail/${song._id}`) Xem chi tiết
                                button.btn-delete.btn.btn-danger(btn-delete=song._id) Xóa
                                form(action="" method="POST" id="form-change-status" data-path=`${prefixAdmin}/products/change-status`)-// form change
                                form(action="" method="POST" id="form-delete-item" data-path=`${prefixAdmin}/products/delete`)-// form delete one
            +pagination(pagination)