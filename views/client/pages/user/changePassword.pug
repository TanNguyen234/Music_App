extends ../../layouts/formUser.pug
include ../../mixins/alert.pug

block main 
    +error-alert(5000)
    
    .container-fluid.d-flex.justify-content-center.align-items-center
       .containerForm.register
         .ballon-top           
         form(action=`/user/password/change?_method=PATCH` method="POST" autocomplete="off" class="form form-change-password")
          h1(class='text-center') Đổi mật khẩu
          div
            label(for="email") Email
            input(type="email" id="email" name="email" value=email disabled required)
          div
            label(for="password") Mật khẩu
            input(type="password" id="password" name="password" minlength="8" maxlength="20" required)
          div
            label(for="passwordCheck") Xác nhận mật khẩu
            input(type="password" id="passwordCheck" name="passwordCheck" minlength="8" maxlength="20" required)
          div
            button(type="submit") Thay đổi
          .button-sub
            a(href='/user/register') Tạo tài khoản mới?
            a(href='/user/password/forgot') Quên mật khẩu?
         .ballon-bottom 