header.header
    .container-fluid
        .row.align-items-center.justify-content-between
            .col-3.col-lg-3.col-md-6.text-top
                .header__logo
                    a(href="/") 
                        img(src="/client/images/logo.png", alt="logo")
            .col-5.col-lg-5.col-md-0.text-top
                .header__nav
                    ul.dislay-flex.flex-direction-row
                        li
                            a(href="/topics") Topics
                        li
                            a(href="/songs") Songs
                        li
                            a(href="/albums") Playlist
            .col-4.col-lg-4.col-md-6.text-top
                .header__login
                    .header__icon 
                        i(class="fa-solid fa-arrow-right")
                    if(user)
                        a(href="/user/info") Profile
                    else 
                        a(href="/user/login") Login